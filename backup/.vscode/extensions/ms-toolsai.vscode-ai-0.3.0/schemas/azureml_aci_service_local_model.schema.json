{
    "type": "object",
    "properties": {
        "name": {
            "description": "service name",
            "type": "string",
            "minLength": 1
        },
        "modelIds": {
            "description": "model id list",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "modelPaths": {
            "description": "model id list",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "imageConfig": {
            "description": "image config",
            "type": "object",
            "properties": {
                "runtime": {
                    "description": "image runtime type",
                    "type": "string",
                    "minLength": 1
                },
                "executionScript": {
                    "description": "the path of image execution script",
                    "type": "string",
                    "minLength": 1
                },
                "dockerFile": {
                    "description": "the path of docker file if the this is a docker image",
                    "type": ["string", "null"] 
                },
                "condaFile": {
                    "description": "the path of conda env file",
                    "type": ["string", "null"]
                },
                "dependencies": {
                    "type": "string"
                },
                "schemaFile": {
                    "description": "the path of image schema file",
                    "type": ["string", "null"]
                },
                "enableGpu": {
                    "description": "whether this image will use gpu",
                    "type": "boolean"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "deploymentConfig": {
            "description": "service deployment config",
            "type": "object",
            "properties": {
                "cpu_cores": {
                    "description": "the number of required CPU",
                    "type": "number",
                    "minLength": 1
                },
                "memory_gb": {
                    "description": "required memory size",
                    "type": "number",
                    "minLength": 1
                },
                "tags": {
                    "description": "service tags",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "description": {
                    "description": "description",
                    "type": "string"
                }
            },
            "required": ["cpu_cores", "memory_gb"]
        },
        "deploymentType": {
            "description": "service deployment type",
            "type": "string",
            "minLength": 1
        }
    },
    "oneOf": [
        {"required": ["modelIds"]},
        {"required": ["modelPaths"]}
    ],
    "required": [
        "name",
        "imageConfig",
        "deploymentConfig",
        "deploymentType"
    ]
}