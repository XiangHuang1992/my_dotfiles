{
    "type": "object",
    "properties": {
        "name": {
            "description": "image name",
            "type": "string",
            "minLength": 1
        },
        "driverProgram": {
            "description": "image driver program",
            "type": "string",
            "minLength": 1
        },
        "description": {
            "description": "description",
            "type": "string",
            "minLength": 1
        },
        "tags": {
            "description": "image tags",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "modelIds": {
            "description": "model id list",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "assets": {
            "description": "asset list",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "asset id",
                        "type": "string",
                        "minLength": 1
                    },
                    "url": {
                        "description": "asset url",
                        "type": "string",
                        "minLength": 1
                    },
                    "mimeType": {
                        "description": "mimeType",
                        "type": "string",
                        "minLength": 1
                    },
                    "unpack": {
                        "description": "true if model file needs unpack, otherwise false",
                        "type": "boolean"
                    }
                },
                "required": [
                    "id",
                    "url",
                    "mimeType"
                ]
            }
        },
        "targetRuntime": {
            "description": "target run time",
            "type": "object",
            "properties": {
                "runtimeType": {
                    "description": "run time type",
                    "type": "string",
                    "minLength": 1
                },
                "properties": {
                    "description": "the properties of target run time",
                    "type": "object",
                    "properties": {
                        "pipRequirements": {
                            "description": "pip requirements",
                            "type": "string",
                            "minLength": 1
                        },
                        "condaEnvFile": {
                            "description": "conda enviroment file",
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "required": [
                        "pipRequirements",
                        "condaEnvFile"
                    ]
                }
            },
            "required": [
                "runtimeType",
                "properties"
            ]
        },
        "dockerFileUri": {
            "description": "the url of docker file",
            "type": ["string", "null"],
            "minLength": 0
        },
        "imageType": {
            "description": "image type",
            "type": "string",
            "minLength": 1
        }
    },
    "required": [
        "name",
        "driverProgram",
        "modelIds",
        "targetRuntime",
        "imageType"
    ]
}