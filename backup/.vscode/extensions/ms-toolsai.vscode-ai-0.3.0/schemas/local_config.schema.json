{
    "type": "object",
    "properties": {
        "name": {
            "description": "Configuration name",
            "type": "string",
            "pattern": "^\\w+$"
        },
        "description": {
            "description": "Configuration description",
            "type": "string"
        },
        "properties": {
            "description": "Configuration properties",
            "type": "object",
            "properties": {
                "pythonPath": {
                    "description": "Python installation path",
                    "type": "string"
                },
                "cntkPath": {
                    "description": "CNTK installation path",
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "name",
        "properties"
    ]
}