{
    "type": "object",
    "properties": {
        "name": {
            "description": "Connect config name",
            "type": "string"
        },
        "host": {
            "description": "hostname or IP address",
            "type": "string"
        },
        "port": {
            "description": "port",
            "type": "number"
        },
        "username": {
            "description": "ssh username",
            "type": "string"
        },
        "password": {
            "description": "ssh password",
            "type": "string"
        },
        "privateKey": {
            "description": "ssh private key (string)",
            "type": "string"
        },
        "privateKeyFilePath": {
            "description": "ssh private key file path",
            "type": "string"
        },
        "passphrase": {
            "description": "ssh private key passphrase",
            "type": "string"
        }
    },
    "anyOf": [
        { "required": [ "host", "username", "password" ] },
        { "required": [ "host", "username", "privateKey" ] },
        { "required": [ "host", "username", "privateKeyFilePath" ] }
    ]
}