{
    "type": "object",
    "properties": {
        "name": {
            "description": "service name",
            "type": "string",
            "minLength": 1
        },
        "modelIds": {
            "description": "model id list",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "modelPaths": {
            "description": "model id list",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "imageConfig": {
            "description": "image config",
            "type": "object",
            "properties": {
                "runtime": {
                    "description": "image runtime type",
                    "type": "string",
                    "minLength": 1
                },
                "executionScript": {
                    "description": "the path of image execution script",
                    "type": "string",
                    "minLength": 1
                },
                "dockerFile": {
                    "description": "the path of docker file if the this is a docker image",
                    "type": ["string", "null"] 
                },
                "condaFile": {
                    "description": "the path of conda env file",
                    "type": ["string", "null"]
                },
                "dependencies": {
                    "type": "string"
                },
                "schemaFile": {
                    "description": "the path of image schema file",
                    "type": ["string", "null"]
                },
                "enableGpu": {
                    "description": "whether this image will use gpu",
                    "type": "boolean"
                },
                "tags": {
                    "description": "image tags in the form of { key: value } pairs",
                    "type": "object",
                    "items": {
                        "type": "object",
                        "name": { "type": "string" }, 
                        "value": { "type": "string" }
                    }
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "deploymentConfig": {
            "description": "service deployment config",
            "type": "object",
            "properties": {
                "autoscale_enabled": {
                    "description": "enable autoscale",
                    "type": "boolean",
                    "enum": [
                        false,
                        true
                    ]
                },
                "autoscale_min_replicas":{
                    "type": "number",
                    "description": "the min number of replicas.",
                    "minLength": 1
                },
                "autoscale_max_replicas": {
                    "type": "number",
                    "description": "the max number of replicas.",
                    "minLength": 1
                },
                "autoscale_refresh_seconds": {
                    "type": "number",
                    "description": "refresh period in seconds.",
                    "minLength": 1
                },
                "autoscale_target_utilization": {
                    "type": "number",
                    "description": "target utilization",
                    "minLength": 1
                },
                "collect_model_data": {
                    "type": "boolean",
                    "description": "enable collect model data",
                    "enum": [
                        false,
                        true
                    ]
                },
                "cpu_cores": {
                    "description": "the number of required CPU",
                    "type": "number",
                    "minLength": 1
                },
                "memory_gb": {
                    "description": "required memory size",
                    "type": "number",
                    "minLength": 1
                },
                "enable_app_insights": {
                    "type": "boolean",
                    "description": "enable app insights",
                    "enum": [
                        true,
                        false
                    ]
                },
                "scoring_timeout_ms": {
                    "type": "number",
                    "description": "scoring time out (ms).",
                    "minLength": 1
                },
                "replica_max_concurrent_requests": {
                    "type": "number",
                    "description": "max concurrent requests per container.",
                    "minLength": 1
                },
                "num_replicas": {
                    "type": ["number", "null"],
                    "description": "the number of replica"
                },
                "primary_key": {
                    "type": ["string", "null"],
                    "description": "primary key"
                },
                "secondary_key": {
                    "type": ["string", "null"],
                    "description": "secondary key"
                },
                "tags": {
                    "description": "service tags in the form of { key: value } pairs",
                    "items": {
                        "type": "object",
                        "name": { "type": "string" }, 
                        "value": { "type": "string" }
                    }
                },
                "description": {
                    "description": "service description",
                    "type": "string"
                }
            },
            "required": [
                "autoscale_enabled", "autoscale_min_replicas", "autoscale_max_replicas", 
                "autoscale_refresh_seconds", "autoscale_target_utilization", "collect_model_data", 
                "cpu_cores", "memory_gb", "enable_app_insights",
                "scoring_timeout_ms", "replica_max_concurrent_requests", "num_replicas",
                "primary_key", "secondary_key"
            ]
        },
        "deploymentTarget": {
            "description": "deployment target",
            "type": "string",
            "minLength": 1
        },
        "deploymentType": {
            "description": "service deployment type",
            "type": "string",
            "minLength": 1
        }
    },
    "oneOf": [
        {"required": ["modelIds"]},
        {"required": ["modelPaths"]}
    ],
    "required": [
        "name",
        "imageConfig",
        "deploymentConfig",
        "deploymentType"
    ]
}