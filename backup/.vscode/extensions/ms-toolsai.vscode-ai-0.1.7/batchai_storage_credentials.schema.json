{
    "type": "object",
    "properties": {
        "azureStorage": {
            "description": "Azure storage account",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Azure storage account name",
                        "type": "string"
                    },
                    "key": {
                        "description": "Azure storage account key",
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "key"
                ]
            }
        },
        "batchAIFileServer": {
            "description": "BatchAI File Server ssh account",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "address": {
                        "description": "BatchAI File Server address (IP or hostname)",
                        "type": "string",
                        "anyOf": [
                            { "format": "hostname" },
                            { "format": "ipv4" },
                            { "format": "ipv6" }
                        ]
                    },
                    "account": {
                        "description": "BatchAI File Server ssh account",
                        "type": "object",
                        "properties": {
                            "username": {
                                "description": "BatchAI File Server ssh username",
                                "type": "string"
                            },
                            "password": {
                                "description": "BatchAI File Server ssh password",
                                "type": "string"
                            },
                            "privateKeyFilePath": {
                                "description": "BatchAI File Server ssh private key file path",
                                "type": "string"
                            },
                            "privateKeyPassphrase": {
                                "description": "BatchAI File Server ssh private key passphrase",
                                "type": "string"
                            }
                        },
                        "oneOf": [
                            { "required": [ "username", "password" ] },
                            { "required": [ "username", "privateKeyFilePath" ] }
                        ]
                    }
                },
                "required": [
                    "address",
                    "account"
                ]
            }
        }
    }
}