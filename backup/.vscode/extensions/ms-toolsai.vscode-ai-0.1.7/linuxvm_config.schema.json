{
    "type": "object",
    "properties": {
        "name": {
            "description": "Configuration name",
            "type": "string"
        },
        "description": {
            "description": "Configuration description",
            "type": "string"
        },
        "properties": {
            "description": "Configuration properties",
            "type": "object",
            "properties": {
                "address": {
                    "description": "LinuxVM hostname or IP address",
                    "type": "string"
                },
                "port": {
                    "description": "LinuxVM port",
                    "type": "number"
                },
                "account": {
                    "description": "LinuxVM ssh account",
                    "type": "object",
                    "properties": {
                        "username": {
                            "description": "LinuxVM ssh username",
                            "type": "string"
                        },
                        "password": {
                            "description": "LinuxVM ssh password",
                            "type": "string"
                        },
                        "privateKeyFilePath": {
                            "description": "LinuxVM ssh private key file path",
                            "type": "string"
                        },
                        "privateKeyPassphrase": {
                            "description": "LinuxVM ssh private key passphrase",
                            "type": "string"
                        }
                    },
                    "oneOf": [
                        { "required": [ "username", "password" ] },
                        { "required": [ "username", "privateKeyFilePath" ] }
                    ]
                }
            }
        }
    }
}